# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres_password@localhost:5432/rag_db
DB_USER=postgres
DB_PASSWORD=postgres_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rag_db

# Arize Phoenix Configuration (Local)
PHOENIX_HOST=localhost
PHOENIX_PORT=6006
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006

# LLM Configuration
LLM_PROVIDER=openai  # openai or ollama
OPENAI_MODEL=gpt-4o-mini  # gpt-4, gpt-4o, gpt-4o-mini, gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-large  # text-embedding-3-large (3072-dim) or text-embedding-3-small (1536-dim)

# Embedding Configuration
EMBED_DIM=3072  # 3072 for text-embedding-3-large, 1536 for text-embedding-3-small

# Ollama Configuration (for later migration)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:4b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:v1.5

# RAG Configuration
RETRIEVAL_TOP_K=5
SPARSE_TOP_K=5
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
