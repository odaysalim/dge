# ===========================================
# LLM Provider Configuration
# ===========================================
# Set to "ollama" for open-source (default) or "openai" for OpenAI
LLM_PROVIDER=ollama

# ===========================================
# Ollama Configuration (Default - Open Source)
# ===========================================
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large
OLLAMA_TEMPERATURE=0.1
OLLAMA_MAX_TOKENS=131072

# ===========================================
# OpenAI Configuration (Optional - if using OpenAI)
# ===========================================
# Uncomment and set if using OpenAI
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# ===========================================
# Database Configuration (Docker)
# ===========================================
DATABASE_URL=postgresql://postgres:postgres_password@postgres:5432/rag_db
DB_USER=postgres
DB_PASSWORD=postgres_password
DB_HOST=postgres
DB_PORT=5432
DB_NAME=rag_db

# ===========================================
# Embedding Configuration
# ===========================================
# 1024 for mxbai-embed-large (Ollama)
# 3072 for text-embedding-3-large (OpenAI)
EMBED_DIM=1024

# Vector table name (for switching between embeddings)
VECTOR_TABLE_NAME=rag_embeddings_ollama

# ===========================================
# RAG Configuration
# ===========================================
RETRIEVAL_TOP_K=5
SPARSE_TOP_K=5
CHUNK_SIZE=512
CHUNK_OVERLAP=50
ENABLE_HYBRID_SEARCH=true

# ===========================================
# Contextual RAG (Anthropic-style)
# ===========================================
CONTEXT_GENERATION_ENABLED=true

# ===========================================
# Arize Phoenix Configuration (Docker)
# ===========================================
PHOENIX_HOST=phoenix
PHOENIX_PORT=6006
PHOENIX_COLLECTOR_ENDPOINT=http://phoenix:6006

# ===========================================
# Conversation Memory
# ===========================================
MEMORY_ENABLED=true
MEMORY_MAX_TOKENS=2000
MEMORY_WINDOW_SIZE=10

# ===========================================
# API Configuration
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
